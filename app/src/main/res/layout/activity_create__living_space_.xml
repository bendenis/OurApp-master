<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bendenisshaffer.ourapp.Create_LivingSpace_Activity">

    <TextView
        android:id="@+id/create_living_space_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Your Shared Space"
        app:layout_constraintBottom_toTopOf="@+id/create_living_space_name_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/create_living_space_name_field"
        android:layout_width="241dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Name Your Shared Space"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/create_living_space_text2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_living_space_text" />

    <ListView
        android:id="@+id/shared_spaces_list"
        android:layout_width="368dp"
        android:layout_height="144dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@+id/create_living_space_back_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_living_space_text2" />

    <Button
        android:id="@+id/create_living_space_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/create_living_space_next_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shared_spaces_list" />

    <Button
        android:id="@+id/create_living_space_next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/create_living_space_back_button"
        app:layout_constraintTop_toBottomOf="@+id/shared_spaces_list" />

    <TextView
        android:id="@+id/create_living_space_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Spaces You Share"
        app:layout_constraintBottom_toTopOf="@+id/shared_spaces_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_living_space_name_field" />

</android.support.constraint.ConstraintLayout>
